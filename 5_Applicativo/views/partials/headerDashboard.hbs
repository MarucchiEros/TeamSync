<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TeamSync - Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="icon" type="image/png" href="/assets/img/favicon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap">
</head>

<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <button class="close-sidebar" id="closeSidebar" aria-label="Chiudi menu">&times;</button>
        <div class="sidebar-header">
            <div class="logo">TeamSync</div>
        </div>
        <nav class="nav-menu">
            <a href="/dashboard/{{progettoId}}" class="nav-link {{#if (eq activePage 'dashboard')}}active{{/if}}">
                <i class="nav-icon">üìä</i>
                <span>Dashboard</span>
            </a>
            <a href="/team/{{progettoId}}" class="nav-link {{#if (eq activePage 'team')}}active{{/if}}">
                <i class="nav-icon">üë•</i>
                <span>Team</span>
            </a>
            <a href="/home" class="nav-link">
                <i class="nav-icon">üè†</i>
                <span>Home</span>
            </a>
        </nav>
        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">{{user.nome.[0]}}{{user.cognome.[0]}}</div>
                <div class="user-info">
                    <span class="user-name">{{user.nome}} {{user.cognome}}</span>
                </div>
            </div>
            <form id="logout-form" action="/logout" method="POST" style="margin:0;">
                <button id="logout-btn" class="button-24 logout" role="button" type="submit">
                    <span>Logout</span>
                </button>
            </form>
        </div>
    </aside>
    <!-- Main Content -->
    <main class="main-content">
