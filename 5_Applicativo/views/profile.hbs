<title>TeamSync - Profilo</title>
{{> headerHome}}

<main class="main-content">
<h1>Profilo utente</h1>
    <div class="profile-card">
        <div class="profile-avatar-section">
            <div class="user-avatar profile-avatar">{{user.nome.[0]}}{{user.cognome.[0]}}</div>
            <div class="user-name profile-username">{{user.nome}} {{user.cognome}}</div>
        </div>
        <hr class="profile-divider">
        {{#if success}}
            <div class="profile-message success">{{success}}</div>
        {{/if}}
        {{#if error}}
            <div class="profile-message error">{{error}}</div>
        {{/if}}
        <form id="profileForm" class="profile-form" method="POST" action="/profilo/update" autocomplete="off">
            <div class="form-group">
                <label for="nome">Nome</label>
                <div class="input-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                    <input type="text" id="nome" name="nome" value="{{user.nome}}" required placeholder="Il tuo nome">
                </div>
            </div>
            <div class="form-group">
                <label for="cognome">Cognome</label>
                <div class="input-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                    <input type="text" id="cognome" name="cognome" value="{{user.cognome}}" required placeholder="Il tuo cognome">
                </div>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <div class="input-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6z"></path><path d="M22 6l-10 7L2 6"></path></svg>
                    <input type="email" id="email" name="email" value="{{user.email}}" required placeholder="La tua email">
                </div>
            </div>
            <div class="form-group">
                <label for="password">Nuova Password</label>
                <div class="input-container password-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                    <input type="password" id="password" name="password" placeholder="Lascia vuoto per non cambiare">
                    <span id="togglePassword" class="toggle-password">
                        <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                    </span>
                </div>
                <small class="password-hint">Minimo 8 caratteri, lascia vuoto per non cambiare</small>
            </div>
            <div class="form-actions profile-actions">
                <button type="reset" class="btn btn-secondary">Annulla</button>
                <button type="submit" class="submit-btn">Salva Modifiche</button>
            </div>
        </form>
    </div>
</main>

<script src="/js/auth.js" type="module"></script>

{{> footer}} 