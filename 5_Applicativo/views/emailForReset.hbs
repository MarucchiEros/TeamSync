<title>TeamSync - Email per reset password</title>
{{> headerAuth}}

<body>
    <div class="container">
        <div class="auth-card">
            <div class="logo">
                <span class="logo-text">TeamSync</span>
            </div>

            <div class="forms-container">
                <p style="text-align:center; color: var(--text-secondary); margin-bottom: 24px; font-size: 15px;">
                    Inserisci la tua email e riceverai un codice per reimpostare la password.</p>
                <form class="form active" id="reset-form">
                    <div id="reset-message"></div>
                    <div class="form-group">
                        <label for="reset-email">Email</label>
                        <div class="input-container">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round">
                                <path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6z">
                                </path>
                                <path d="M22 6l-10 7L2 6"></path>
                            </svg>
                            <input type="email" id="reset-email" name="email" placeholder="Inserisci la tua email"
                                required autocomplete="email">
                        </div>
                    </div>

                    <button type="submit" class="submit-btn">Invia codice</button>
                    <div style="text-align:center; margin-top:18px;">
                        <a href="/login" class="forgot-link">Torna al login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{> footer}}